<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ManalizaApp.Views.DriverDetailsPage"
             Title="{Binding Plaque}">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="FirstName" Text="{Binding FirstName}" />
            <Entry x:Name="LastName" Text="{Binding LastName}" />
            <Entry x:Name="Plaque" Text="{Binding Plaque}" />
            <Entry x:Name="Company" Text="{Binding Company}" />
            <Entry x:Name="Customer" Text="{Binding Customer}" />
            <Entry x:Name="Stock" Text="{Binding Stock}" />
            <Entry x:Name="PlaceOfOperation" Text="{Binding PlaceOfOperation}" />
            <Button Text="Güncelle" Clicked="BtnUpdate_Driver"/>
            <Button Text="Sil" Clicked="BtnDelete_Driver"/>
            <Entry x:Name="CompanyCode" Text="{Binding CompanyCode}" Opacity="0"/>
            <Entry x:Name="CustomerCode" Text="{Binding CustomerCode}" Opacity="0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>